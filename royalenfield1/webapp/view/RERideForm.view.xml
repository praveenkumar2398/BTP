<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    controllerName="ns.royalenfield.controller.RERideForm"
>
    <Shell id="_IDGenShell2">
        <Page id="_IDGenPage" >
            <customHeader>
                <OverflowToolbar id="_IDGenOverflowToolbar1">
                    <Bar id="_IDGenBar1">
                        <contentLeft>
                        <Button press=".onbackToTestRide" type="Negative" class="button1" icon="sap-icon://nav-back"/>
                            <Image
                                id="_IDGenmage1"
                                src="https://www.royalenfield.com/content/dam/royal-enfield/india/logos/logo.svg"
                                width="50%"
                                height="100%"
                            />
                        </contentLeft>

                        <contentMiddle>
                            <Text
                                id="_IDGenTxt1"
                                text="BOOK A TEST RIDE"
                            />
                        </contentMiddle>
                    </Bar>
                </OverflowToolbar>
            </customHeader>
            <content >
                <VBox
                    id="_IDGenVBox6"
                    justifyContent="Center"
                    alignItems="Center"
                    width="100%"
                >
                    <Text
                        id="_IDGenxt1"
                        text="CONTACT DETAILS"
                        textAlign="Center"
                        class="titleText"
                    />
                </VBox>
                <!-- <VBox >
                <HBox >
                <Image class="bike" src="https://www.royalenfield.com/content/dam/royal-enfield/motorcycles/bear-650/book-a-test-ride/bear-650-800x710.png">
                </Image>
               </HBox>
                 </VBox> -->
                <f:SimpleForm id="_IDGenSimpleForm"
                    xmlns:layout="sap.ui.layout"
                    layout="ResponsiveGridLayout"
                    labelSpanL="4"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    columnsL="2"
                    columnsM="2"
                    
                    width="100%"
                >
                    <HBox id="_IDGenHBox">
                    <Text id="_IDGenText11" text="{/textda}"></Text>
                       
                        <Image id="_IDGenImage"
                            class="bike"
                            src="{/dynamicImageSrc}"
                            tooltip="Bear 650 Image"
                        />

                        <VBox id="_IDGenVBox" class="bikeForm">
                            <HBox id="_IDGenHBox1" class="Field">
                                <Label id="_IDGenLabel"
                                    text="First Name"
                                    required="true"
                                    class="label1"
                                />
                                <Label id="_IDGenLabel1" text="Last Name" />
                            </HBox>
                            <HBox id="_IDGenHBox2" class="labelField">
                                <Input id="firstName"  change="onFirstNameChange"  showClearIcon="true"/>
                                <Input id="lastName"  />
                            </HBox>
                            <Label id="_IDGenLabel2"
                                text="Email ID"
                                required="true"
                            />
                            <HBox id="_IDGenHBox3" class="labelField">
                                <Input id="email" change="onEmailChange" />
                            </HBox>
                            <Label id="_IDGenLabel3"
                                text="Pincode"
                                required="true"
                            />
                            <HBox id="_IDGenHBox4" class="labelField">
                                <Input id="pincode" />
                            </HBox>
                            <Label id="_IDGenLabel4"
                                text="Mobile Number"
                                required="true"
                            />
                            <HBox id="_IDGenHBox5" class="labelField">
                                <Input
                                    id="mobileNumber"
                                    placeholder="Enter Mobile Number" change="onMobileNumberChange"
                                />
                            </HBox>
                            <Button id="_IDGenButton1" text="Save" press="onSave" type="Success" icon="sap-icon://accept" />
                        </VBox>
                    </HBox>
                </f:SimpleForm>
            </content>
        </Page>
    </Shell>
</mvc:View>
