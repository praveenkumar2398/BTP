<mvc:View
    controllerName="ns.royalenfield.controller.REContactus"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <Page title="Royal Enfield"  showHeader="true" >
        <customHeader>
            <Bar>
                <contentMiddle>
                    <!-- Centered Logo -->
                    <Image 
                        src="{i18n>re}"
                        alt="Royal Enfield " 
                        width="100%" height="100%" />
                        <Image src="img/re3.png" width="50px" class="movingBike" />
                </contentMiddle>
            </Bar>
        </customHeader>
        <content>
            <Text text="Contact Us" class="headerText" />
            <VBox class="contactUsVBox">
                <Text class="introText"
                    text="Contact us about anything related to our company or services. We will do our best to get back to you as soon as possible." />

                <!-- Form Section -->
                <VBox class="formSection">
                    <Label text="Your Name" labelFor="nameInput" />
                    <Input id="name" placeholder="Enter your name" class="inputField" />

                    <!-- Email Input -->
                    <Label text="Email ID" labelFor="emailInput" />
                    <Input id="emailId" placeholder="Enter your email ID" type="Email"
                        class="inputField" />

                    <!-- Phone Number Input -->
                    <Label text="Phone Number" labelFor="phoneInput" />
                    <Input id="mobileNumber" placeholder="Enter your phone number" type="Number"
                        class="inputField" />

                    <!-- Question Text Area -->
                    <Label text="Your Question" labelFor="questionInput" />
                    <TextArea id="anyQueries" placeholder="Enter your question" rows="4"
                        class="inputField" />

                    <!-- Submit Button -->
                    <Button text="Send" type="Emphasized" press=".onSubmit" class="sendButton" />
                </VBox>
            </VBox>

            <!-- Static Contact Info -->
            <VBox class="contactInfoSection">
                <Text text="Royal Enfield - A Unit Of Eicher Motors Ltd." class="contactText" />
                <Text text="Plot #96, Institutional Area, Sector-32" class="contactText" />
                <Text text="Gurgaon, HARYANA 122001, India" class="contactText" />
                <Text text="Phone: 1800-210-0008 (Our hours are 9 am - 9 pm IST, Monday - Sunday)"
                    class="contactText" />
                <Text text="Email: support@royalenfield.com" class="contactText" />

                <!-- Social Media Buttons -->
                <HBox class="socialMedia">
                    <Button icon="img/facebook.png" tooltip="Facebook" press="onFacebookPress" />
                    <Button icon="img/twitter.png" tooltip="Twitter" press="onTwitterPress" />
                    <Button icon="img/instagram.png" tooltip="Instagram" press="onInstagramPress" />
                    <Button icon="img/youtube.png" tooltip="YouTube" press="onYouTubePress" />
                </HBox>
                
            </VBox>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    class="chatusicon"
                    icon="img/chatus.png" 
                press="handleMessagePopoverPress"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>